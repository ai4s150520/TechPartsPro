# Copy this file to .env and fill values before running locally or in CI/CD
# Never commit real secrets to the repository.

# Django / Backend
SECRET_KEY=change-me-to-a-long-secret
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db:5432/ecommerce_db
POSTGRES_PASSWORD=YOUR_PASSWORD
ALLOWED_HOSTS=localhost,127.0.0.1
DEBUG=True

# Redis / Celery
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0

# Frontend
VITE_API_URL=http://localhost:8000/api

# Payment gateway (Razorpay)
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# Notes:
# - Use a proper secret manager (Vault, AWS Secrets Manager, GitHub Secrets) for production.
# - For Kubernetes, create secrets via `kubectl create secret generic backend-secrets --from-literal=SECRET_KEY=...` etc.
